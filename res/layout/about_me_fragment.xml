<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    
    android:id="@+id/about_me_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
 	  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="253dp"
                android:layout_height="match_parent"
                android:background="#88f3f17c"
                android:text="@string/about_mes"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="75dip"
                android:layout_height="132dip"
                android:src="@drawable/mes_logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:src="@drawable/alegria_logo" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/about_alegria"
                android:background="#88f3f17c"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="218dp"
                android:layout_height="match_parent"
                android:background="#88f3f17c"
                android:text="@string/about_piit"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="0.96"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>
        
</LinearLayout>

</RelativeLayout>
